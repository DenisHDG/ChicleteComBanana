<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@color/white"

    tools:context=".Eleicao">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_bob_esponja"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/bob_esponja"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/imageView_patric"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/patric2"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="241dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/imageView_lula_molusco"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/lula_molusco"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="425dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/imageView_sandy"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/sandy"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="535dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black" />

        <Button
            android:id="@+id/button_resultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Resultado"
            android:textColor="@color/black"
            android:background="@drawable/botao_resultado"/>

        <TextView
            android:id="@+id/textViewResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:text="Vencedor!!!"/>
        <Button
            android:id="@+id/button_refazer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Votar Novamente"
            android:textColor="@color/black"
            android:background="@drawable/botao_resultado"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>